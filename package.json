{
  "name": "hashglyph",
  "version": "0.0.1",
  "description": "Deterministically generate SVG glyphs that distantly resemble CJK graphemes, from a 64-bit hash string.",
  "license": "The Unlicense",
  "main": "./index.js",
  "bin": {
    "hashglyph": "./index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node index.js",
    "test": "node index.js 0000000000001a2b > /tmp/character-hash-0000000000001a2b.svg && echo \"wrote /tmp/character-hash-0000000000001a2b.svg\""
  },
  "dependencies": {
    "yargs": "^18.0.0"
  }
}
